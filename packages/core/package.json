{
  "name": "luxe-edit",
  "version": "0.1.3",
  "description": "A beautiful, customizable rich text editor for React built on Lexical with customizable toolbars and floating toolbar support",
  "keywords": [
    "react",
    "editor",
    "lexical",
    "rich-text",
    "wysiwyg",
    "toolbar",
    "text-editor",
    "content-editable"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./dist/index.css": "./dist/index.css",
    "./index.css": "./dist/index.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "prepublishOnly": "yarn build"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luxe-tools/luxe-edit.git"
  },
  "homepage": "https://github.com/luxe-tools/luxe-edit#readme",
  "bugs": {
    "url": "https://github.com/luxe-tools/luxe-edit/issues"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@lexical/code": "^0.39.0",
    "@lexical/link": "^0.39.0",
    "@lexical/list": "^0.39.0",
    "@lexical/react": "^0.39.0",
    "@lexical/rich-text": "^0.39.0",
    "@lexical/selection": "^0.39.0",
    "@lexical/utils": "^0.39.0",
    "lexical": "^0.39.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
